<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler1"
        android:onClick="handler1Test"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler2"
        android:onClick="handler2Test"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HandlerThread"
        android:onClick="handlerThreadTest"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UI更新测试"
        android:onClick="handlerUITest"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进程之间通信"
        android:onClick="communicationTest"/>

</LinearLayout> 
