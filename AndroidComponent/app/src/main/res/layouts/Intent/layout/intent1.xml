<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/iCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打电话" />

    <Button
        android:id="@+id/iMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发短信" />

    <Button
        android:id="@+id/iBrowser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开浏览器" />

    <Button
        android:id="@+id/iPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照" />

    <Button
        android:id="@+id/iSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置" />

    <Button
        android:id="@+id/iDesktop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="转到桌面" />

    <Button
        android:id="@+id/iOtherActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开另一个Activity（显式，不带参数）" />

    <Button
        android:id="@+id/iOtherActivity1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开另一个Activity（隐式）" />

    <Button
        android:id="@+id/iOtherActivityParameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带参数打开另一个Activity" />

    <Button
        android:id="@+id/iOtherActivityReturn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带返回值打开另一个Activity" />

    <TextView
        android:id="@+id/iReturn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return ..." />


</LinearLayout> 
