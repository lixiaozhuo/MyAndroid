<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 总进度的颜色 -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#00000000" />
        </shape>
    </item>
    <!-- 当前进度的颜色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#01b3fa" />
            </shape>
        </clip>
    </item>
</layer-list>